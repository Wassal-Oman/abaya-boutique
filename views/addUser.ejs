<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
      name="viewport"
    />

    <title>Abaya Boutique | Add User</title>

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
      type="text/css"
    />

    <!-- Bootstrap Core Css -->
    <link href="/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <!-- Waves Effect Css -->
    <link href="/plugins/node-waves/waves.css" rel="stylesheet" />

    <!--WaitMe Css-->
    <link href="/plugins/waitme/waitMe.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="/css/style.css" rel="stylesheet" />

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="/css/themes/all-themes.css" rel="stylesheet" />
  </head>

  <body class="theme-red">
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>

    <!-- Top Bar -->
    <nav class="navbar">
      <div class="container-fluid">
        <div class="navbar-header">
          <a
            href="javascript:void(0);"
            class="navbar-toggle collapsed"
            data-toggle="collapse"
            data-target="#navbar-collapse"
            aria-expanded="false"
          ></a>
          <a href="javascript:void(0);" class="bars"></a>
          <a class="navbar-brand" href="/">ABAYA BOUTIQUE</a>
        </div>
      </div>
    </nav>

    <section>
      <!-- Left Sidebar -->
      <aside id="leftsidebar" class="sidebar">
        <!-- User Info -->
        <div class="user-info">
          <div class="image">
            <img src="/images/user.png" width="48" height="48" alt="User" />
          </div>
          <div class="info-container">
            <div
              class="name"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              administrator
            </div>
            <div class="email">admin@abaya-boutique.com</div>
          </div>
        </div>

        <!-- Menu -->
        <div class="menu">
          <ul class="list">
            <li class="header">MENU</li>
            <li>
              <a href="/">
                <i class="material-icons">home</i>
                <span>Home</span>
              </a>
            </li>
            <li class="active">
              <a href="/users">
                <i class="material-icons">wc</i>
                <span>List of Users</span>
              </a>
            </li>
            <li>
              <a href="/abayas">
                <i class="material-icons">spa</i>
                <span>List of Abayas</span>
              </a>
            </li>
            <li>
              <a href="/orders">
                <i class="material-icons">widgets</i>
                <span>Orders</span>
              </a>
            </li>
            <li>
              <a href="/deliveries">
                <i class="material-icons">local_shipping</i>
                <span>Deliveries</span>
              </a>
            </li>
            <li>
              <a href="/logout">
                <i class="material-icons">input</i>
                <span>Log out</span>
              </a>
            </li>
          </ul>
        </div>

        <!-- Footer -->
        <div class="legal">
          <div class="copyright">
            &copy; 2019 <a href="javascript:void(0);">ABAYA BOUTIQUE</a>.
          </div>
          <div class="version"><b>Version: </b> 1.0.0</div>
        </div>
      </aside>
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="block-header">
          <h2>Add New User</h2>
        </div>

        <!-- Basic Card -->
        <div class="row clearfix">
          <div class="card">
            <div class="header">
              Fill All Details To Add New User
            </div>
            <div class="body">
              <form class="form-horizontal" action="/users/store" method="POST">
                <div class="form-group">
                  <label for="name" class="col-sm-2 control-label"
                    >User Name:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <input
                        name="name"
                        type="text"
                        class="form-control"
                        id="name"
                        placeholder="Enter User Name"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="name" class="col-sm-2 control-label">
                    User Email:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <input
                        name="email"
                        type="text"
                        class="form-control"
                        id="email"
                        placeholder="Enter User Email"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="price" class="col-sm-2 control-label"
                    >User Phone:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <input
                        name="phone"
                        type="number"
                        class="form-control"
                        id="phone"
                        placeholder="Enter User Phone"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="price" class="col-sm-2 control-label"
                    >User Password:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <input
                        name="password"
                        type="password"
                        class="form-control"
                        id="password"
                        placeholder="Enter User Password"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="color" class="col-sm-2 control-label"
                    >User Type:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <select name="type" class="form-control show-tick">
                        <option value="Deliverer" selected>Deliverer</option>
                        <option value="Tailor">Tailor</option>
                        <option value="Customer">Customer</option>
                      </select>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Add User</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Jquery Core Js -->
    <script src="/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="/plugins/node-waves/waves.js"></script>

    <!-- Wait Me Plugin Js -->
    <script src="/plugins/waitme/waitMe.js"></script>

    <!-- Custom Js -->
    <script src="/js/admin.js"></script>
    <script src="/js/pages/cards/basic.js"></script>

    <!-- Demo Js -->
    <script src="/js/demo.js"></script>
  </body>
</html>
