<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
      name="viewport"
    />

    <title>Abaya Boutique | Edit Abaya</title>

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
      type="text/css"
    />

    <!-- Bootstrap Core Css -->
    <link href="/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <!-- Waves Effect Css -->
    <link href="/plugins/node-waves/waves.css" rel="stylesheet" />

    <!--WaitMe Css-->
    <link href="/plugins/waitme/waitMe.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="/css/style.css" rel="stylesheet" />

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="/css/themes/all-themes.css" rel="stylesheet" />
  </head>

  <body class="theme-red">
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>

    <!-- Top Bar -->
    <nav class="navbar">
      <div class="container-fluid">
        <div class="navbar-header">
          <a
            href="javascript:void(0);"
            class="navbar-toggle collapsed"
            data-toggle="collapse"
            data-target="#navbar-collapse"
            aria-expanded="false"
          ></a>
          <a href="javascript:void(0);" class="bars"></a>
          <a class="navbar-brand" href="/">ABAYA BOUTIQUE</a>
        </div>
      </div>
    </nav>

    <section>
      <!-- Left Sidebar -->
      <aside id="leftsidebar" class="sidebar">
        <!-- User Info -->
        <div class="user-info">
          <div class="image">
            <img src="/images/user.png" width="48" height="48" alt="User" />
          </div>
          <div class="info-container">
            <div
              class="name"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              administrator
            </div>
            <div class="email">admin@abaya-boutique.com</div>
          </div>
        </div>

        <!-- Menu -->
        <div class="menu">
          <ul class="list">
            <li class="header">MENU</li>
            <li>
              <a href="/">
                <i class="material-icons">home</i>
                <span>Home</span>
              </a>
            </li>
            <li>
              <a href="/users">
                <i class="material-icons">wc</i>
                <span>List of Users</span>
              </a>
            </li>
            <li class="active">
              <a href="/abayas">
                <i class="material-icons">spa</i>
                <span>List of Abayas</span>
              </a>
            </li>
            <li>
              <a href="/orders">
                <i class="material-icons">widgets</i>
                <span>Orders</span>
              </a>
            </li>
            <li>
              <a href="/deliveries">
                <i class="material-icons">local_shipping</i>
                <span>Deliveries</span>
              </a>
            </li>
            <li>
              <a href="/logout">
                <i class="material-icons">input</i>
                <span>Log out</span>
              </a>
            </li>
          </ul>
        </div>

        <!-- Footer -->
        <div class="legal">
          <div class="copyright">
            &copy; 2019 <a href="javascript:void(0);">ABAYA BOUTIQUE</a>.
          </div>
          <div class="version"><b>Version: </b> 1.0.0</div>
        </div>
      </aside>
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="block-header">
          <h2>Edit Existing Abaya</h2>
        </div>

        <!-- Basic Card -->
        <div class="row clearfix">
          <div class="card">
            <div class="header">
              Fill All Details To Edit Existing Abaya
            </div>
            <div class="body">
              <form
                class="form-horizontal"
                action="/abayas/update"
                method="POST"
                enctype="multipart/form-data"
              >
                <input type="hidden" value="<%= abaya.id %>" name="id">
                <input type="hidden" value="<%= abaya.image_name %>" name="image_name">
                <div class="form-group">
                  <label for="name" class="col-sm-2 control-label"
                    >Abaya Name:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <input
                        name="name"
                        type="text"
                        class="form-control"
                        id="name"
                        placeholder="Enter Abaya Name"
                        required
                        value="<%= abaya.name %>"
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                    <label for="type" class="col-sm-2 control-label"
                      >Abaya Cloth Type:</label
                    >
                    <div class="col-sm-10">
                      <div class="form-line">
                        <select name="type" class="form-control show-tick">
                          <option value="Black" <% if(abaya.type === 'Nada') { %><%= 'selected' %><% }%>>Nada</option>
                          <option value="Red" <% if(abaya.type === 'Top Black') { %><%= 'selected' %><% }%>>Top Black</option>
                          <option value="Green" <% if(abaya.type === 'Korean Crepe') { %><%= 'selected' %><% }%>>Korean Crepe</option>
                          <option value="Blue" <% if(abaya.type === 'Saudi Crepe') { %><%= 'selected' %><% }%>>Saudi Crepe</option>
                          <option value="White" <% if(abaya.type === 'Silk') { %><%= 'selected' %><% }%>>Silk</option>
                          <option value="Orange" <% if(abaya.type === 'Toshi') { %><%= 'selected' %><% }%>>Toshi</option>
                          <option value="Orange" <% if(abaya.type === 'Chinese Crepe') { %><%= 'selected' %><% }%>>Chinese Crepe</option>
                        </select>
                      </div>
                    </div>
                  </div>
                <div class="form-group">
                  <label for="price" class="col-sm-2 control-label"
                    >Abaya price:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <input
                        name="price"
                        type="number"
                        class="form-control"
                        id="price"
                        placeholder="Enter Abaya Price"
                        required
                        value="<%= abaya.price %>"
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="width" class="col-sm-2 control-label"
                    >Abaya Size:</label
                  >
                  <div class="col-sm-5">
                    <div class="form-line">
                      <input
                        name="width"
                        type="number"
                        class="form-control"
                        id="width"
                        placeholder="Enter Abaya Width"
                        required
                        value="<%= abaya.width %>"
                      />
                    </div>
                  </div>
                  <div class="col-sm-5">
                        <div class="form-line">
                          <input
                            name="height"
                            type="number"
                            class="form-control"
                            id="height"
                            placeholder="Enter Abaya Height"
                            required
                            value="<%= abaya.height %>"
                          />
                        </div>
                      </div>
                </div>
                <div class="form-group">
                  <label for="color" class="col-sm-2 control-label"
                    >Abaya Color:</label
                  >
                  <div class="col-sm-10">
                    <div class="form-line">
                      <select name="color" class="form-control show-tick">
                        <option value="Black" <% if(abaya.color === 'Black') { %><%= 'selected' %><% }%>>Black</option>
                        <option value="Red" <% if(abaya.color === 'Red') { %><%= 'selected' %><% }%>>Red</option>
                        <option value="Green" <% if(abaya.color === 'Green') { %><%= 'selected' %><% }%>>Green</option>
                        <option value="Blue" <% if(abaya.color === 'Blue') { %><%= 'selected' %><% }%>>Blue</option>
                        <option value="White" <% if(abaya.color === 'White') { %><%= 'selected' %><% }%>>White</option>
                        <option value="Orange" <% if(abaya.color === 'Orange') { %><%= 'selected' %><% }%>>Orange</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="size" class="col-sm-2 control-label">
                    Abaya Image:
                  </label>
                  <div class="col-sm-10">
                    <div class="form-line">
                      <input
                        name="file"
                        type="file"
                        id="file"
                      />
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Edit Abaya</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Jquery Core Js -->
    <script src="/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="/plugins/node-waves/waves.js"></script>

    <!-- Wait Me Plugin Js -->
    <script src="/plugins/waitme/waitMe.js"></script>

    <!-- Custom Js -->
    <script src="/js/admin.js"></script>
    <script src="/js/pages/cards/basic.js"></script>

    <!-- Demo Js -->
    <script src="/js/demo.js"></script>
  </body>
</html>
